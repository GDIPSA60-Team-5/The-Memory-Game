<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state: slightly darker gradient -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#8E2DE2"
            android:endColor="#4A00E0"
            android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#FF4EFD" /> <!-- Neon pink border -->
            <corners android:radius="8dp" />
            <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp"/>
            <solid android:color="#33000000" /> <!-- subtle overlay -->
        </shape>
    </item>

    <!-- Default state: vertical gradient with neon border -->
    <item>
        <shape>
            <gradient
            android:startColor="#6A11CB"
            android:centerColor="#E91E63"
            android:endColor="#6A11CB"
            android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#D81B60" /> <!-- pinkish-purple border -->
            <corners android:radius="8dp" />
            <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp"/>
            <solid android:color="#00000000" /> <!-- transparent -->
        </shape>
    </item>

</selector>
