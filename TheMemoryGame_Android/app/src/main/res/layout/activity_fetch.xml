<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fetchFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/secondary_bg"
        android:scaleType="centerCrop"
         />

    <!-- Main Container -->
    <LinearLayout
        android:id="@+id/fetch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#CC000000">

        <!-- URL Input & Fetch Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/url"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="4"
                android:hint="@string/enter_the_url_to_fetch_images"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/cyber_input"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:inputType="textUri"
                android:singleLine="true"
                android:alpha="0.1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/fetch"
                android:textColor="#E91E63"
                android:layout_marginStart="8dp"
                android:background="@drawable/cyber_button"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Grid of Images -->
        <GridView
            android:id="@+id/imageGridView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:numColumns="4"
            android:horizontalSpacing="6dp"
            android:verticalSpacing="6dp"
            android:gravity="center"
            android:stretchMode="columnWidth"
            android:clipToPadding="false"
            android:padding="4dp" />

        <!-- Progress Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:paddingBottom="16dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/futuristic_progress"
                android:visibility="invisible"
                android:max="100"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:padding="8dp" />

            <TextView
                android:id="@+id/progressTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
